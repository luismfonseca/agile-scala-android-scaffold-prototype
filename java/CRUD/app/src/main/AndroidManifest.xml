            android:name="pt.pimentelfonseca.agilescalaandroid.app.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pt.pimentelfonseca.agilescalaandroid.app.ui.EditPostActivity"
            android:label="@string/title_activity_edit_post"
            android:parentActivityName="pt.pimentelfonseca.agilescalaandroid.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>
